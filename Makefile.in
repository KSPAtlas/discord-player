PREFIX = @@prefix@@

.PHONY: all clean install uninstall distclean dist-clean

all:
	mkdir -p build && cd build && qmake ../discord-player.pro
	$(MAKE) -C build

clean:
	rm -rf build

install:
	mkdir -p ${PREFIX}/bin
	install -s build/discord-player ${PREFIX}/bin
	mkdir -p ${PREFIX}/share/icons
	install -m 644 discord-player.icon ${PREFIX}/share/icons
	mkdir -p ${PREFIX}/share/applications
	install -m 644 discord-player.desktop ${PREFIX}/share/applications

uninstall:
	rm -f ${PREFIX}/bin/discord-player
	rm -f ${PREFIX}/share/icons/discord-player.icon
	rm -f ${PREFIX}/share/applications/discord-player.desktop

distclean: clean
	rm Makefile
	rm discord-player.desktop

dist-clean: distclean
